<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background1"
    android:orientation="vertical" 
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >
        
            <Button
            android:id="@+id/tongbu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="同步表格"
            android:textColor="@color/black"
            android:textSize="20sp" />
            
        <Button
            android:id="@+id/enter_mysystem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="enter mysystem"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/myfinger_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/register_fingerprint"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/myfiger_validate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/validate_fingerprint"
            android:textColor="@color/black"
            android:textSize="20sp" />
              <Button
            android:id="@+id/clear_flash"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/clear_flash"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>
    
     <ImageView
        android:id="@+id/fingerprintImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


</LinearLayout>