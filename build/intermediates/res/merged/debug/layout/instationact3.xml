<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/entranc123"
    android:orientation="vertical" >
 <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/entrance333" />
      <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            >
            <ImageButton
                android:id="@+id/back_page"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/zuojian" />
            </RelativeLayout>
            
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="220dp" 
            >
               <ImageButton
                android:id="@+id/next_page"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/youjian" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
 <LinearLayout 
    android:enabled="false"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="85dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/huanyin" >
     <TextView
     android:id="@+id/text_username"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="95dp"
     android:layout_marginTop="27dp"
     android:textColor="#ffffff"
     android:textSize="20dp"
     android:text="姓名" />
 </LinearLayout>
 
 <Button
     android:alpha="0"
     android:enabled="false"
     android:id="@+id/quitbutton"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_marginRight="3dp"
     android:layout_marginTop="83dp"
     android:background="@drawable/anquantuichu" />

 <AutoCompleteTextView
     android:id="@+id/editText1"
     android:layout_width="180dp"
     android:layout_height="wrap_content"
     android:layout_below="@+id/quitbutton"
     android:layout_marginTop="62dp"
     android:layout_marginLeft="220dp"
     android:ems="6"
     android:background="@null"
     android:textColor="#ffffff"
     android:singleLine="true"/>

 <EditText
     android:id="@+id/editText2"
     android:layout_width="60dp"
     android:layout_height="wrap_content"
     android:layout_below="@+id/editText1"
     android:layout_marginTop="84dp"
     android:layout_marginLeft="292dp"
     android:maxLength="3"
     android:background="@null"
     android:textColor="#ffffff"
     android:singleLine="true"
     android:text="0"
     android:inputType="number" />

<EditText
     android:id="@+id/editText3"
     android:layout_width="60dp"
     android:layout_height="wrap_content"
     android:layout_below="@+id/editText2"
     android:layout_marginTop="82dp"
     android:layout_marginLeft="292dp"
     android:background="@null"
     android:maxLength="3"
     android:textColor="#ffffff"
     android:singleLine="true"
     android:inputType="number"
     android:imeOptions="actionDone" >
     <requestFocus/>
 </EditText>

          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal" >
               
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                   >
                    <Button
                        android:id="@+id/open"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:background="@drawable/btn_mopendoor_pressed" />
                </RelativeLayout>
            </LinearLayout>
  
  
</RelativeLayout>