<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.example.outstation.aty.OutStationTakePhotoAty">
      <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/chuzhan1" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/back_page"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/zuojian" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp" >

            <ImageButton
                android:id="@+id/next_page"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/youjian" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/zx_kuang"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:typeface="serif"
                    android:text="车内照片"
                    android:textColor="@color/White"
                    android:textSize="20sp" />
        
            </LinearLayout>
                 <ImageView
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="80dp"
                    android:id="@+id/image_car_in"
                    android:layout_width="250dp"
                    android:layout_height="380dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_paizhao1_pressed" />
                <ImageButton
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="60dp"
                    android:id="@+id/camera_car_in"
                    android:layout_marginTop="10dp"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:src="@drawable/composer_camera" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>